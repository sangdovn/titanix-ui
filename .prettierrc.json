{
  "singleQuote": false,
  "trailingComma": "es5",
  "tabWidth": 2,
  "printWidth": 88,
  "semi": true,
  "plugins": ["prettier-plugin-tailwindcss", "prettier-plugin-sort-imports"],
  "overrides": [
    {
      "files": ["*.js", "*.jsx", "*.ts", "*.tsx"],
      "options": {
        "importOrder": [
          "^react$",
          "<THIRD_PARTY_MODULES>",
          "^@/components/(.*)$",
          "^@/utils/(.*)$",
          "^[./]"
        ],
        "importOrderSeparation": true,
        "importOrderSortSpecifiers": true
      }
    }
  ]
}
